<!-- 实时更新确保userMessage上下居中 -->
<script>
    function uploadImage() {
        var formData = new FormData($("#frmUploadFile")[0]);
        console.log(formData);
        $.ajax({
            url: '/user/upload',
            type: 'POST',
            data: formData,
            async: false,
            cache: false,
            contentType: false,
            processData: false,
            success: function (data) {
                if (0 === data.code) {
                    $("#headImage").attr('src', data.filePath);
                    $("#headImage1").attr('src', data.filePath);
                } else {
                    alert("修改图片失败！");
                }
            },
            error: function (err) {
                console.log("err", err);
            }
        });
    }

    var headImageUpload = document.getElementById("headImageUpload");
    headImageUpload.addEventListener("click", function () {
        uploadImage();
    }, false);

</script>
