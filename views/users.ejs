<%- include Header_Search %>
<%- include Navbar %>
<div class="page-content" id="page-content">
    <div class="page-header no-margin-bottom" id="page-header">
        <div class="container-fluid">
            <h2 class="h5 no-margin-bottom">Volunteers </h2>
        </div>
    </div>
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/users">Volunteers </a></li>
            <li class="breadcrumb-item active">志愿者信息 </li>
        </ul>
    </div>
    <div class="container-fluid">
        <% if(locals.islogin){ %>
            <!--用户信息表单-->
            <div class="container">
                <div class="col-lg-12">
                    <div class="block margin-bottom-sm">
                        <div class="title"><strong>志愿者信息</strong></div>
                        <div class="table-responsive">
                            <table class="table table-striped" data-toggle="table" data-show-export="false" data-pagination="true" data-click-to-select="true" data-toolbar="#toolbar">
                                <thead align="center">
                                <tr>
                                    <th data-field="state" data-checkbox="true"></th>
                                    <th>ID</th>
                                    <th>姓&nbsp;&nbsp;&nbsp;&nbsp;名</th>
                                    <th>性&nbsp;&nbsp;&nbsp;&nbsp;别</th>
                                    <th>电&nbsp;&nbsp;&nbsp;&nbsp;话</th>
                                    <th>学&nbsp;&nbsp;&nbsp;&nbsp;校</th>
                                    <th>岗&nbsp;&nbsp;&nbsp;&nbsp;位</th>
                                    <th>职&nbsp;&nbsp;&nbsp;&nbsp;务</th>
                                    <th>操&nbsp;&nbsp;&nbsp;&nbsp;作</th>
                                </tr>
                                </thead>
                                <tbody align="center">
                                <% if(datas.length){ %>
                                    <% datas.forEach(function(user){ %>
                                        <tr>
                                            <td data-checkbox="false"></td>
                                            <td><%= user.id %></td>
                                            <td><%= user.name %></td>
                                            <td><%= user.sex %></td>
                                            <td><%= user.telephone %></td>
                                            <td><%= user.school %></td>
                                            <td><%= user.group %></td>
                                            <td><%= user.jop %></td>
                                            <td>
                                                <div class="btn-group operation">
                                                    <a href="/users/toUpdate/<%= user.id %>" title="修改">修改</a>
                                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                    <a href="/users/del/<%= user.id %>">删除</a>
                                                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        <% }else{ %>
            <div id="myAlert" class="alert alert-warning">
                <a href="#" class="close" data-dismiss="alert">&times;</a>
                <strong>警告！</strong>登录已超时，请登录后访问。
            </div>
            <script>
                $(function(){
                    $(".close").click(function(){
                        $("#myAlert").alert();
                    });
                });
            </script>
        <% } %>
    </div>
<%- include Footer %>